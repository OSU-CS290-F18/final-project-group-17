

<div class="question">
  <div id="question-text">
    <em>{{question}}</em>
  </div>
  </div class="radio-buttons">
    <fieldset id="answers">
      <legend>Choose your answer</legend>
      <div>
        <input type="radio" name="{{question}}" id="first-answer" value="{{firstAnswer}}">
        <label for="firstAnswer">{{firstAnswer}}</label>
      </div>
      <div>
        <input type="radio" name="{{question}}" id="second-answer" value="{{secondAnswer}}">
        <label for="secondAnswer">{{secondAnswer}}</label>
      </div>
      <div>
        <input type="radio" name="{{question}}" id="third-answer" value="{{thirdAnswer}}">
        <label for="thirdAnswer">{{thirdAnswer}}</label>
      </div>
      <div>
        <input type="radio" name="{{question}}" id="fourth-answer" value="{{fourthAnswer}}">
        <label for="fourthAnswer">{{fourthAnswer}}</label>
      </div>
    </fieldset>
  </div>
</div>
